class Solution {
  public:
    Node *addNode(Node *head, int p, int x) {
        if (!head) return head;
        Node* curr = head;
       
        for (int i = 0; i < p && curr != nullptr; i++) {
            curr = curr->next;
        }

        if (!curr) return head; 

        Node* newNode = new Node(x);

      
        newNode->next = curr->next;
        newNode->prev = curr;
        
        if (curr->next) {
            curr->next->prev = newNode;
        }
        curr->next = newNode;

        return head;
    }
};
